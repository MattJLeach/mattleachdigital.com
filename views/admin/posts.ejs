<% include ./includes/header %>

<h1 class="text-center"><%= title %></h1>

<a href="/admin/posts/add" role="button" class="btn btn-primary">Add New</a>

<table class="table">
	<thead>
		<tr>
			<th>Title</th>
			<th>Slug</th>
			<th>Status</th>
			<th>Published Date</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% posts.forEach(function(post) { %>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.slug %></td>
				<td><%= post.status %></td>
				<td>
					<% if (post.publishedDate) { %>
						<%= post.publishedDate.toDateString() %>
					<% } %>
				</td>
				<td>
					<a href="/admin/posts/<%= post._id %>" target="_blank" role="button" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
					<a href="/admin/posts/<%= post._id %>/edit" role="button" class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
					<form class="form-inline" action="/admin/posts/<%= post._id %>?_method=DELETE" method="POST">
						<button type="submit" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
					</form>
				</td>
			</tr>
		<% }); %>
	</tbody>
</table>

<% include ./includes/footer %>